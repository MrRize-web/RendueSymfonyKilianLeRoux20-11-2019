{% extends 'base.html.twig' %}

{% block title %}Listes des Produits!{% endblock %}

{% block body %}
<h1>Liste des Produits</h1>
    <table class="table">
        <tr>
            <th>Id</th>
            <th>Titre</th>
            <th>Nom</th>
            <th>Description</th>
            <th>EAN</th>
            <th></th>
        </tr>

        {% for cat in Produits %}
        <tr>
            <td>{{ cat.id }}</td>
            <td>{{ cat.Reference }}</td>
            <td>{{ cat.Nom }}</td>
            <td>{{ cat.Description }}</td>
            <td>{{ cat.EAN }}</td>
            <td>
                <a href="{{ path("Produit_modifier",
                {"id":cat.id}) }}" class="btn btn-primary">
                    <i class="far fa-edit"></i>
                </a>
                <a href="{{ path("Produit_supprimer",
                {"id":cat.id}) }}" class="btn btn-danger">
                    <i class="far fa-edit"></i>
                </a>
            </td>
        </tr>
        {% endfor %}
    </table>
    <a href="{{ path("Produit_ajouter") }}" class="btn btn-success">Ajouter un Produit</a>

{% endblock %}
